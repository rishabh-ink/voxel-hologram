# # Compass configuration
# See http://compass-style.org/help/tutorials/configuration-reference

require 'sass-css-importer'

# Additional load paths for Sass CSS Importer gem
add_import_path Sass::CssImporter::Importer.new('libraries')

# ## Application configuration
environment = :development
encoding = 'utf-8'
http_path = '.'
css_dir = 'dist/styles'
sass_dir = 'app/styles'
images_dir = 'app/images'
javascripts_dir = 'app/scripts'
fonts_dir = 'app/fonts'
output_style = :compressed
relative_assets = true
generated_images_path = 'dist/images'
additional_import_paths = ['libraries']
sourcemap = true
sprite_engine = 'oily_png'
